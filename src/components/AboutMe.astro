---
import { getI18N } from '../i18n'

const { currentLocale } = Astro
const i18n = getI18N({ currentLocale })
---

<article
  class='flex flex-col items-center justify-center gap-4 text-gray-700 dark:text-gray-300 md:flex-row'
>
  <div
    class='[&>p]:mb-4 [&>p>strong]:text-green-500 dark:[&>p>strong]:text-green-300 [&>p>strong]:font-normal [&>p>strong]:font-mono text-pretty'
  >
    <p set:html={i18n.ABOUT_ME_TEXT_1}>
      <img
        class='float-left order-1 object-cover w-32 mr-3 h-full p-1 md:order-2 -rotate-2 lg:p-2 lg:w-52 aspect-square rounded-2xl bg-black/20 dark:bg-yellow-500/5 ring-1 ring-black/70 dark:ring-white/80'
        src='/img/picprof.webp'
        alt='Wilmer Rojas'
      />
    </p>
    <p set:html={i18n.ABOUT_ME_TEXT_2} />
    <p set:html={i18n.ABOUT_ME_TEXT_3} />
  </div>
</article>
